<Page x:Class="WPF_Event.KeyboardEvent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Event"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      MouseDown="Grid_MouseLeftButtonDown"
      Title="KeyboardEvent">

    <Grid MouseDown="Grid_MouseLeftButtonDown" Background="Transparent">
        <StackPanel Width="100" Height="100">
            <TextBox KeyDown="TextBox_KeyDown"></TextBox>
            <Button Click="Button_Click">Click</Button>
        </StackPanel>

    </Grid>
</Page>
