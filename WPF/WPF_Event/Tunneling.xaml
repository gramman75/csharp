<Page x:Class="WPF_Event.Tunneling"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Event"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Tunneling" PreviewMouseDown="Page_PreviewMouseDown">

    <Grid PreviewMouseDown="Grid_PreviewMouseDown">
        <Button Width="150" Height="150" Background="Red" PreviewMouseDown="Button_PreviewMouseDown">
            <Canvas Width="100" Height="100" Margin="25" PreviewMouseDown="Canvas_PreviewMouseDown">
                <Rectangle Fill="Blue" Width="100" Height="100" PreviewMouseDown="Rectangle_PreviewMouseDown"></Rectangle>
            </Canvas>
        </Button>
    </Grid>
</Page>
